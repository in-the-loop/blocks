{
  "compilerOptions": {
    "charset": "utf8",
    "module": "CommonJS",
    "strict": true,
    "target": "ESNext",
    "jsx": "react",
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
